@using WebVivencias.Services
@rendermode InteractiveServer
@inject SessionStorageService SessionStorage
@inject NavigationManager Navigation


<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <a class="navbar-brand" href="#">Navbar</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <NavLink class="nav-link" href="acerca">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Acerca de
            </NavLink>
        </ul>

        <ul class="navbar-nav ms-auto">
            <li class="nav-item">
                <a class="nav-link" href="#" @onclick="Logout">
                    <span class="bi bi-box-arrow-right" aria-hidden="true"></span> Cerrar sesión
                </a>
            </li>
        </ul>

    </div>
</nav>

<!-- Agrega este estilo para evitar que el contenido se superponga con la navbar fija -->
<style>
    body {
        padding-top: 56px;
        /* Ajusta este valor según la altura de tu navbar */
    }
</style>
@code {
    private async Task Logout()
    {
        await SessionStorage.RemoveItemAsync("usuario");
        Navigation.NavigateTo("/login");
    }
}